extends layout

block content    
    img.garyImg(src="/img/gary.png")
    .interactiveContent  
        h3.intro Let your imagination float in the meanders of your mind and run some events for your favorite user!
        
        form
            table.actionTable
                tr
                    td
                        span.actionLabel 1. 
                        select#userSelect
                            option(disabled='disabled' selected='selected' style='display: none;' value='none') Select an user...
                            option(value='123') edri
                            option(value='321') Jean-Mich'
                            option(value='132') Blairôme
                    td
                        span.actionLabel 2. 
                        select#eventSelect(disabled='disabled')
                            option(disabled='disabled' selected='selected' style='display: none;' value='none') Select an event...
                            option(value='456') Add points...
                            option(value='654') Add a badge...
                            option(value='465') Post a comment...
                    td
                        span.actionLabel 3. 
                        input#eventProperties(disabled='disabled' type='text' value='Please select an event.')
                    td
                        span.actionLabel 4. 
                        input#sendButton.btn.btn-primary.sendButton(disabled='disabled' type='button' value='Run!')
        
        #results.results
            h3.resultTitle AW YEAH! Now let's have a look at the current 
