            h3.resultTitle Yay! How high are you in the leaderboard?
            
            table.leaderboardTable
                tr
                    th Position
                    th User
                    th Points
                tr.currentUser
                    td #1
                    td edri
                    td 120
                tr
                    td #2
                    td blairôme
